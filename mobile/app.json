{
  "expo": {
    "name": "MinhaTorcida",
    "slug": "minha-torcida",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#1a365d"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.minhatorcida.app",
      "icon": "./assets/icon.png",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa de acesso à câmera para tirar fotos de perfil.",
        "NSPhotoLibraryUsageDescription": "Este app precisa de acesso às fotos para selecionar imagens de perfil.",
        "CFBundleDisplayName": "MinhaTorcida"
      }
    },
    "android": {
      "package": "com.minhatorcida.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset"
    ],
    "extra": {
      "eas": {
        "projectId": "c3786a23-011a-47d8-ac80-c5db0504de60"
      }
    },
    "owner": "luciano.falls"
  }
}
